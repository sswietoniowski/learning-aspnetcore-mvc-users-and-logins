@using learning_aspnetcore_mvc_users_and_logins.Services
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject IAccountManager AccountManager

<ul class="navbar-nav">
    @if (AccountManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <p class="text-dark">Hello @AccountManager.GetUserName(User)!</p>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>